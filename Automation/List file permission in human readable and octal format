import os
import stat

path = '/home/mana/Work/run'
f_dict = {}
for i in os.scandir(path):
    f_dict.setdefault(i.name, []).append(stat.S_IMODE(i.stat().st_mode))
    f_dict.setdefault(i.name, []).append(stat.filemode(i.stat().st_mode))
for x,y in sorted(f_dict.items()):
    print('{:12} {}  {:o}'.format(x,y[1],y[0]))
