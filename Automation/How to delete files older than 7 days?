from pathlib import Path
from datetime import date, timedelta

today = date.today()
p = Path('/home/mana/Temp/task')
fm = [(i, today - date.fromtimestamp(i.stat()[-2]))
      for i in p.iterdir()]

for x,y in fm:
    if y > timedelta(days = 7):
        print(x)
        x.unlink() 
else:
    print('Above files are deleted.')
